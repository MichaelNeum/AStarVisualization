<Window
    x:Class="AStarVisualization.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:AStarVisualization.WPF.Controls;assembly=AStarVisualization.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AStarVisualization.WPF.Cleanup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="A* Visualization"
    Width="750"
    Height="800"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85.0" />
            <RowDefinition Height="15.0" />
        </Grid.RowDefinitions>

        <c:AStarCanvas
            Grid.Row="0"
            Map="{Binding Map, Mode=OneWay}"
            Path="{Binding Path, Mode=OneWay}" />

        <StackPanel
            Grid.Row="1"
            Background="CornflowerBlue"
            Orientation="Horizontal">
            <Button>lasdjflköasdjfl</Button>
        </StackPanel>
    </Grid>
</Window>
